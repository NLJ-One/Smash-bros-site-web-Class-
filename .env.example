# ============================
# SMASH ARENA - VARIABLES ENVIRONNEMENT
# ============================
# ⚠️ NE PAS COMMITTER DANS GIT
# Copier .env.example en .env et remplir les valeurs

# Application
APP_NAME=SMASH ARENA
APP_ENV=production
APP_DEBUG=false
APP_URL=https://smash-arena.com

# Base de données (si applicable)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=smash_arena
DB_USERNAME=root
DB_PASSWORD=

# API Keys (si applicable)
API_KEY=
API_SECRET=

# Email (si applicable)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=

# Sécurité
CSRF_TOKEN_LENGTH=32
SESSION_LIFETIME=120
REMEMBER_ME_LIFETIME=2592000

# CORS (si applicable)
CORS_ALLOWED_ORIGINS=https://smash-arena.com

# Rate Limiting
RATE_LIMIT_ATTEMPTS=60
RATE_LIMIT_WINDOW=1

# Logs
LOG_CHANNEL=stack
LOG_LEVEL=error
